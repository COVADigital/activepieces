{
  "name": "pieces-jira",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/jira/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/pieces/jira",
        "tsConfig": "packages/pieces/jira/tsconfig.lib.json",
        "packageJson": "packages/pieces/jira/package.json",
        "main": "packages/pieces/jira/src/index.ts",
        "assets": [
          "packages/pieces/jira/*.md"
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/pieces/jira/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}