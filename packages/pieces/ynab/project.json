{
  "name": "pieces-ynab",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/ynab/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/pieces/ynab",
        "tsConfig": "packages/pieces/ynab/tsconfig.lib.json",
        "packageJson": "packages/pieces/ynab/package.json",
        "main": "packages/pieces/ynab/src/index.ts",
        "assets": ["packages/pieces/ynab/*.md"],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs pieces-ynab {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/pieces/ynab/**/*.ts",
          "packages/pieces/ynab/package.json"
        ]
      }
    }
  },
  "tags": []
}
